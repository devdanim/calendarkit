{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src/components/pro-scheduler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/components/pro-scheduler/**/*.ts", "src/components/pro-scheduler/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
